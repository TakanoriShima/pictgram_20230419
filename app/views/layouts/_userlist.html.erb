<div class="topic-index-wrapper">
  <div class="container">
    <h1 class="text-center"><%= title %>（<%= users.size %>）</h1>
    <% if users.size != 0 %>
    <% users.each do |user| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
            <div class="profile-image">
              <%= image_tag user.profile.profile_image.url %> 
            </div>
             <% if !user.profile.nil? %>    
              <%= link_to profile_path(user.profile.id) do %>      
               <%= user.name %>
              <% end %> 
             <% else %> 
              <%= user.name %>
             <% end %> 
            </h2>
        </div>
      </div>
    <% end %>
    <% else %>
      <h2 class="text-danger text-center">まだいません</h2>
    <% end %>
  </div>
</div>