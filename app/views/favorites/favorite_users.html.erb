<div class="topic-index-wrapper">
  <div class="container">
    <% @users.each do |user| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            
            <h2 class="topic-author">
             <% if !user.profile.nil? %>    
              <%= link_to profile_path(user.profile.id) do %>      
               <%= user.name %>
              <% end %> 
             <% else %> 
              <%= user.name %>
             <% end %> 
            </h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>